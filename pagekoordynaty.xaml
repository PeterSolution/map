        <TextBox x:Name="boxlocation" HorizontalAlignment="Center" Margin="0,339,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="44" Width="1415" Background="#667BFFC5" TextAlignment="Center" IsReadOnly="True" FontSize="22"/>
        <TextBox HorizontalAlignment="Left"  Margin="319,696,0,0" TextWrapping="Wrap" Text="Długość geograficzna: &#x0a;Szerokość geograficzna" AcceptsReturn="True" VerticalAlignment="Top" Height="140" Width="906" Background="#667BFFC5"  IsReadOnly="True" FontSize="36"/>
        <TextBox HorizontalAlignment="Left" Margin="641,0,0,0" TextWrapping="Wrap" Text="podaj adres celu" VerticalAlignment="Center" FontSize="28"  IsReadOnly="True"/>
        <TextBox x:Name="boxdestination" HorizontalAlignment="Left" Margin="494,560,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="580" FontSize="36"/>
