        <Button x:Name="btnszuk" Content="" Margin="1424,924,0,0" VerticalAlignment="Top" Height="76" Width="76" Background="#33FFFFFF" Click="btnszuk_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="0,968,0,0" TextWrapping="Wrap" Text="Powrot" VerticalAlignment="Top" Width="76" BorderBrush="#66FFFFFF" FontSize="18" IsReadOnly="True" TextAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Margin="1424,962,0,0" TextWrapping="Wrap" Text="Szukaj" VerticalAlignment="Top" Width="76" FontSize="18" BorderBrush="#66FFFFFF" TextAlignment="Center"/>
        <Image x:Name="im1" HorizontalAlignment="Left" Height="44" Margin="0,924,0,0" VerticalAlignment="Top" Width="76"/>
        <Image x:Name="im2" HorizontalAlignment="Left" Height="44" Margin="1424,924,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBox HorizontalAlignment="Left" Margin="319,656,0,0" TextWrapping="Wrap" Text="Wyznaczone Współrzędne geograficzne" TextAlignment="Center" VerticalAlignment="Top" Height="40" Width="906" Background="#667BFFC5"  IsReadOnly="True" FontWeight="Bold" FontSize="20"/>

    </Grid>
